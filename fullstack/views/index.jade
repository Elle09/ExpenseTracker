html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Expense Tracker
    link(rel='stylesheet' href='style.css')
    link(rel='stylesheet' href='nstyle.css')
  body
    header
      h1 Expense Tracker
    div
      form#expense
        label(for='amount') Amount
        input#amount(type='number' name=' amount' placeholder='Amount..' required='')
        br
        label(for='description') Description
        input#description(type='text' name='description' placeholder='Description..' required='')
        br
        label(for='category') Category
        select#category(name='category' required='')
          option(disabled='' selected='' value='')  -- select a Category -- 
          option(value='food') Food
          option(value='fuel') fuel
          option(value='travel') Travel
          option(value='emi') EMI
          option(value='Grocery') Grocery
          option(value='others') Others
        br
        input(type='submit' value='Add Expense')
      hr
      input#getExpense(type='submit' value='Get Expenses')
    #notificationContainer
      // notification container
    section#timeSpan
      span
        button#daily.btn(type='click') Daily
      span
        button#weekly.btn(type='click') Weekly
      span
        button#monthly.btn(type='click') Monthly
    #displayContainer
    section#pagination.pagination
    br
    input#download(type='image' style='width:3rem;height:3rem;margin-left: 5rem;' src='data:image/png;base64,' alt='Download')
    button#logout.btn Logout
    input#premium(type='submit' value='Buy Premium')
